<UserControl x:Class="WPFProductManager.Views.ListeProduit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:WPFProductManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">

        <ListView Margin="5,5,0,5" ItemsSource="{Binding Produits, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedProduit, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="70px" Header="Code" DisplayMemberBinding="{Binding Code}" />
                    <GridViewColumn Width="130px" Header="Nom" DisplayMemberBinding="{Binding Nom}" />
                </GridView>
            </ListView.View>
        </ListView>
    
</UserControl>