<Window x:Class="WPF.ProductManager.WindowRemoveAPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supprimer un joueur" Height="100" Width="300"
        xmlns:my="clr-namespace:CoupeDuMondeFootball;assembly=CoupeDuMondeFootball">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2" Name="mTextBlockTitre"
                   Text="Voulez-vous vraiment suprimer ce joueur ?" FontWeight="Bold" 
                   FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <Button Name="mButtonYes" Content="Oui" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="4" Click="YesButton" />

        <Button Name="mButtonNo" Content="Non" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="4" Click="NoButton"/>
    </Grid>
</Window>
